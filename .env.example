# =============================================================================
# AIOps Infrastructure Monitoring - Environment Configuration
# Copy this file to .env and update with your values
# =============================================================================

# -----------------------------------------------------------------------------
# InfluxDB Configuration
# -----------------------------------------------------------------------------
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=my-super-secret-token
INFLUXDB_ORG=aiops
INFLUXDB_BUCKET=metrics
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=admin123456

# -----------------------------------------------------------------------------
# Slack Integration
# -----------------------------------------------------------------------------
# Get your webhook from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#aiops-alerts
SLACK_USERNAME=AIOps Monitor

# -----------------------------------------------------------------------------
# PagerDuty Integration (Optional)
# -----------------------------------------------------------------------------
# Get integration key from: https://support.pagerduty.com/docs/services-and-integrations
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key
PAGERDUTY_ROUTING_KEY=your-routing-key

# -----------------------------------------------------------------------------
# AWS Configuration (for production deployment)
# -----------------------------------------------------------------------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_ACCOUNT_ID=123456789012

# S3 Buckets
S3_MODEL_BUCKET=aiops-ml-models-prod
S3_LOGS_BUCKET=aiops-logs-prod

# Lambda Configuration
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY=1024

# -----------------------------------------------------------------------------
# ML Model Configuration
# -----------------------------------------------------------------------------
# Anomaly Detection
ANOMALY_CONTAMINATION=0.05
ANOMALY_SCORE_THRESHOLD=-0.3
CONSECUTIVE_ANOMALIES_THRESHOLD=2

# LSTM Prediction
LSTM_LOOKBACK_WINDOW=180
LSTM_FORECAST_HORIZON=180
LSTM_BATCH_SIZE=32
LSTM_EPOCHS=50
LSTM_LEARNING_RATE=0.001

# Training
TRAINING_WINDOW=24h
VALIDATION_SPLIT=0.2
MODEL_SAVE_PATH=./models

# -----------------------------------------------------------------------------
# Monitoring Configuration
# -----------------------------------------------------------------------------
COLLECTION_INTERVAL=10
MONITORING_CHECK_INTERVAL=300
PREDICTION_INTERVAL=600

# Alert Thresholds
HIGH_CPU_THRESHOLD=80
HIGH_MEMORY_THRESHOLD=85
HIGH_NETWORK_THRESHOLD=500
HIGH_DISK_IO_THRESHOLD=10000

# -----------------------------------------------------------------------------
# Database Configuration (Optional - PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aiops_metrics
POSTGRES_USER=aiops_admin
POSTGRES_PASSWORD=secure_password_123

# -----------------------------------------------------------------------------
# Redis Configuration (Optional - Caching)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FILE=logs/aiops.log

# Timezone
TZ=UTC

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_ANOMALY_DETECTION=true
ENABLE_LSTM_PREDICTION=true
ENABLE_SLACK_ALERTS=true
ENABLE_PAGERDUTY_ALERTS=false
ENABLE_CLOUDWATCH_METRICS=false
ENABLE_GRAFANA_DASHBOARDS=false

# -----------------------------------------------------------------------------
# Performance Tuning
# -----------------------------------------------------------------------------
MAX_WORKERS=4
QUEUE_SIZE=1000
CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# JWT Secret (for API authentication if implemented)
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION=3600

# API Keys (if implementing REST API)
API_KEY=your-api-key-here

# -----------------------------------------------------------------------------
# Terraform Variables (for infrastructure deployment)
# -----------------------------------------------------------------------------
TF_VAR_project_name=aiops-monitoring
TF_VAR_environment=prod
TF_VAR_aws_region=us-east-1

# -----------------------------------------------------------------------------
# Development / Testing
# -----------------------------------------------------------------------------
# Run in demo mode (uses simulated data)
DEMO_MODE=false

# Number of simulated servers
NUM_SIMULATED_SERVERS=5

# Simulate anomalies (for testing)
SIMULATE_ANOMALIES=true
ANOMALY_INJECTION_RATE=0.02

# -----------------------------------------------------------------------------
# Notes:
# -----------------------------------------------------------------------------
# 1. Never commit the .env file to version control
# 2. Add .env to your .gitignore
# 3. Use strong passwords in production
# 4. Rotate secrets regularly
# 5. Use AWS Secrets Manager or HashiCorp Vault for production secrets